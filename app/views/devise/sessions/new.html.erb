<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<br>
<div class="field form-group">
  <%= f.email_field :email, placeholder: "E-mail Address", autofocus: true, autocomplete: "email", class: "form-control mr-sm-2" %>
  <br>
  <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "form-control mr-sm-2" %>
</div>

<br>

<div>
  <% if devise_mapping.rememberable? -%>

  <div class="field form-group" style="display: flex;">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-outline-success my-2 my-sm-0" %>
  </div>
  <% end %>

</div>

<%= render "devise/shared/links" %>
