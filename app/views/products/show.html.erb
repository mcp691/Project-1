<h1>
  <strong><%= @product.name %></strong>
</h1>
<div class="product-view">

  <div class="img-view">
    <figure class="figure">
      <%= link_to image_tag(@product.image_url, class: "figure-img img-fluid rounded"), @product %>
    </figure>
  </div>
  <h3>
    <%= @product.description %>
  </h3>
  <br>
  <div>
    <br>
    <h3>
      <strong>Colour:</strong>
      <%= @product.colour %>
    </h3>
    <br>
    <h2>
      <strong>Add to Cart</strong>
      $<%= @product.price %>.00
    </h3>
    <br>
  </div>
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
</div>
<br>
<hr>
<div class="comments">
  <h3>
    <strong>Ratings:</strong>
    <br>
    <%= @product.highest_rating_comment %>
    <br>
    <%= @product.lowest_rating_comment %>
  </h3>
</div>
