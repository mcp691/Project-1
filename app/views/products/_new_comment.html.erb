<% if signed_in? %>
  <br>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    <div>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body, class: "form-control com-box", rows: 5, cols: 20, placeholder: "Please describe why you like or dislike this product" %>
    </div>
    <div>
      <%= f.label :rating %><br>
      <%= f.text_field :rating, class: "rating form-control com-box" %>
    </div>
    <div>
      <%= f.submit "Submit", class: "btn btn-outline-success my-2 my-sm-2" %>
    </div>
  <% end %>
<% end %>
