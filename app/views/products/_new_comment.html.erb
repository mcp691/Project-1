<% if signed_in? %>
  <br>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    <p>
      <%= f.label :body, "Comments" %><br>
      <%= f.text_area :body, rows: 5, cols: 40, class: "form-control", placeholder: "Please describe why you like or dislike this product" %>
    </p>
    <p>
      <%= f.label :rating %><br>
      <%= f.text_field :rating, class: "rating", class: "form-control" %>
    </p>
    <p>
      <%= f.submit "Submit", class: "btn btn-outline-success my-2 my-sm-2" %>
    </p>
  <% end %>
<% end %>
